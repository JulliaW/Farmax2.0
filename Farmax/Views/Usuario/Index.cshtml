@model IEnumerable<Farmax.Models.Usuario>
@{
    ViewData["Title"] = "Listagem de Usuários";
}
<br />
<h1>Usuários</h1>
<br />
<p align="right">
    <a class="btn btn-outline-dark" asp-action="Create">+</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nivel)
            </th>
            <th scope="col">

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr> 
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.Login
                </td>
                <td>
                    @item.Senha
                </td>
                <td>
                    @item.Nivel
                </td>
                <td>
                    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                        Editar
                    </a> |
                    <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                        Detalhes
                    </a> |
                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                        Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

